extends layout

block content
  #about
    p This is an experiment the intent of which is to make pretty colors. Nary a loftier goal has been dreamt.
  #work-area
    #swatch
    #swatch-roots
      #swatch-root-note
      span Root
      #swatch-root-color
    ul#swatch-options
      each option, key in options
        li
          input(type='radio', name='swatch-option', value=option, id='swatch-option-#{key}')
          label(for='swatch-option-#{key}')=option